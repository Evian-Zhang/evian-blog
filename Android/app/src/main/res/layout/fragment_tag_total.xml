<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.writings.tag.TagTotalFragment">

    <LinearLayout
        android:id="@+id/tag_total_fetching"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="Splash" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tag_total_failed"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tag_total_fail_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fetch_fail_text"
            />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tag_total_succeeded_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</FrameLayout>